<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/number_blue_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_no"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:background="@drawable/button_red_selector" 
            android:text="@string/remove"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/btn_remove"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/tv_count"
            android:singleLine="true"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/tv_price"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_quantity_minus"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:background="@drawable/background_coners"
                android:gravity="center"
                android:text="@string/minus"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize20" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minWidth="60dp"
                android:background="@drawable/background_coners"
                android:gravity="center"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize18" />

            <Button
                android:id="@+id/btn_quantity_plus"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:background="@drawable/background_coners"
                android:gravity="center"
                android:text="@string/plus"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize20" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>